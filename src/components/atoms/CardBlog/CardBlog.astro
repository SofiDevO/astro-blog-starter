---
import FormattedDate from '@atoms/utilsComponents/FormattedDate.astro';
const { title, img, content, href } = Astro.props;
---

<a href={href} class="card__parent">
	<div class="card__image-container">
		<img alt={title} src={img} class="card__image" />
	</div>
	<div class="card__content">
		<h2 class="card__title">{title}</h2>
		<p class="card__description">{content}</p>
		<slot name="date" />
	</div>
</a>


<style>
	.card__parent {
		display: flex;
        flex-direction: column;
		max-width: 32.8rem;
		height: 26.6rem;
		overflow: hidden;
		border-radius: 22px;
        filter: drop-shadow( 0 0 5px rgba(23, 23, 23, 0.401));
	}

	.card__parent:hover {
		box-shadow: 0 0 1px rgba(27, 27, 27, 0.1);
	}

	.card__image-container {
		width: 100%;
		height: 14rem;
		overflow: hidden;
	}

	.card__image {
		width: 100%;
		height: 14rem;
		object-fit: cover;
		border-bottom-left-radius: 1rem;
		transition: transform .6s ease-in-out, filter 150ms ease-in-out;
	}

	.card__parent:hover .card__image {
		transform: scale(1.25);
		filter: saturate(50%);
	}

	.card__content {
		display: flex;
		flex-direction: column;
		justify-content: center;
		text-align: left;
		padding: 1rem;
		background: var(--card-background);
		border-bottom-left-radius: 1rem;
		border-bottom-right-radius: 1rem;
		gap: 1rem;
		height: 18rem;
	}



	.card__title {
		font-size: 1.8rem;
		font-weight: 600;
		color: var(--color-tertiary);
	}

	.card__description {
		font-size: 1.3rem;
		color: white;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		margin-top: 0.5rem;
	}


</style>
