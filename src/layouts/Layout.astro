---
import BaseHead from "@src/components/BaseHead.astro";
import ToggleTheme from "@components/atoms/ToggleTheme/ToggleTheme.astro";
const {
  title,
  description,
  image,
} = Astro.props;

import Header from "@organisms/Header/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead  title={title} description={description} image={image} />
  </head>
  <body>
    <ToggleTheme />
      <Header/>
    <main>
      <slot />
    </main>
  </body>
</html>


<style is:global>

  main{
    padding: 5rem 1rem;

  }
</style>